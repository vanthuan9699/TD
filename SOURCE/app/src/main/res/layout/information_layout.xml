<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffccc"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="130dp"
                android:layout_height="170dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_bd" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="270dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="BÙI THỊ DUYÊN"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_below="@id/tv1"
                android:layout_alignRight="@id/tv1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:text="+376043024"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_alignRight="@id/bt1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:background="@drawable/red_round_bg"
                android:text="SỬA THÔNG TIN"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/red_round_bg1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57.5dp"
            android:clickable="true"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/red_round_pressed"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_gd"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Lịch sử giao dịch"
                android:gravity="center"
                android:textColor="#0F0E0E"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_ten"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57.5dp"
            android:clickable="true"
            android:layout_marginHorizontal="20dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_hd"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Hỏi đáp"
                android:gravity="center"
                android:textColor="#0F0E0E"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_ten"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57.5dp"
            android:clickable="true"
            android:layout_marginHorizontal="20dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_hdsd"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Hướng dẫn sử dụng"
                android:gravity="center"
                android:textColor="#0F0E0E"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_ten"/></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57.5dp"
            android:clickable="true"
            android:layout_marginHorizontal="20dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_exit"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Đăng xuất"
                android:gravity="center"
                android:textColor="#0F0E0E"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_ten"/></RelativeLayout>


    </LinearLayout>


</LinearLayout>
